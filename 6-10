6) import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        double megabytes, kilobytes;

        Scanner scanner = new Scanner(System.in);

        System.out.print("Ingrese la cantidad en Megabytes: ");
        megabytes = scanner.nextDouble();

        kilobytes = megabytes * 1024;

        System.out.println(megabytes + " Megabytes equivalen a " + kilobytes + " Kilobytes.");

        scanner.close();
    }
}

7)import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Introduce la nota del primer examen: ");
        double notaPrimerExamen = scanner.nextDouble();

        System.out.print("¿Qué nota quieres sacar en el trimestre?: ");
        double notaDeseadaTrimestre = scanner.nextDouble();

        double notaSegundoExamen = (notaDeseadaTrimestre - 0.4 * notaPrimerExamen) / 0.6;

        System.out.println("Para tener un " + notaDeseadaTrimestre + " en el trimestre tienes que sacar un " + notaSegundoExamen + " en el segundo examen");

        scanner.close();
    }
}

8)import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Ingrese la hora (solo la hora, sin minutos): ");
        int hora = scanner.nextInt();

        String mensaje;
        if (6 <= hora && hora < 12) {
            mensaje = "Buenos días";
        } else if (12 <= hora && hora < 21) {
            mensaje = "Buenas tardes";
        } else {
            mensaje = "Buenas noches";
        }

        System.out.println("Para tener un " + mensaje + ".");
        
        scanner.close();
    }
}

9) import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int horasTrabajadas;
        int sueldoSemanal;

        System.out.print("Introduzca el número de horas trabajadas durante la semana: ");
        horasTrabajadas = scanner.nextInt();

        if (horasTrabajadas <= 40) {
            sueldoSemanal = 12 * horasTrabajadas;
        } else {
            sueldoSemanal = 12 * 40 + (horasTrabajadas - 40) * 16;
        }

        System.out.println("El sueldo semanal que le corresponde es de " + sueldoSemanal + " soles");
        
        scanner.close();
    }
}
10) import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        double altura, tiempoDeCaida;
        final double g = 9.81;

        System.out.print("Ingrese la altura desde la que caerá el objeto (en metros): ");
        altura = input.nextDouble();
        tiempoDeCaida = Math.sqrt(2 * altura / g);

        System.out.println("El tiempo que tardará en caer el objeto desde " + altura + " metros de altura es de " + tiempoDeCaida + " segundos.");
    }
}
